<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root minWidth="300" alignment="TOP_CENTER" hgap="10" vgap="10" type="javafx.scene.layout.GridPane" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/2.2">
    <padding><Insets top="15" right="15" bottom="5" left="15"/></padding>

    <!-- Headline -->
    <Label text="Enter Mongo DB connection details" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <!-- Title field -->
    <Label fx:id="titleLabel" text="Title" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="titleInput" promptText="Mongo DB Connection" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Host field -->
    <Label fx:id="hostLabel" text="Host/IP" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="hostInput" promptText="127.0.0.1" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Port field -->
    <Label fx:id="portLabel" text="Port" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="portInput" promptText="27017" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- Username field -->
    <Label fx:id="usernameLabel" text="Username" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="usernameInput" promptText="" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- Password field -->
    <Label fx:id="passwordLabel" text="Password" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="passwordInput" promptText="" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <!-- Title field -->
    <Label fx:id="databaseLabel" text="Database" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="databaseInput" promptText="test" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <!-- Buttons -->
    <Button fx:id="btnSave" text="Save" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <Button fx:id="btnUpdate" visible="false" text="Update" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <Button fx:id="btnReset" text="Reset" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
</fx:root>